<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >
	
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="40dp"
        android:background="@drawable/bg_unlogin_bar"
		android:orientation="horizontal">
	        
	       	<LinearLayout
		    	android:id="@+id/drawtab"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_weight="1"
		        android:orientation="vertical">
		        
				<TextView
		        	android:layout_width="wrap_content"
					android:layout_height="28dp"
					android:layout_marginTop="5dp"
			    	android:layout_gravity="center|bottom"
					android:text="@string/maintab_text_draw"
					android:textColor="@color/white">
	        	</TextView>
	        	
				<View 
		    		android:id="@+id/drawtabview"
				    android:layout_width="match_parent"
				    android:layout_height="7dp"
				    android:background="@color/blue" >
				</View>
				
			</LinearLayout>
		        
			<View 
			    android:layout_width="0.5dp"
			    android:layout_height="22dp"
			    android:layout_gravity="center"
			    android:background="@color/white" >
			</View>
    	     
			<LinearLayout
	            android:id="@+id/chattab"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_weight="1"
		        android:orientation="vertical">
	        
				
		        <TextView
		        	android:layout_width="wrap_content"
		        	android:layout_height="28dp"
					android:layout_marginTop="5dp"
			    	android:layout_gravity="center|bottom"
		        	android:text="@string/maintab_text_message"
		        	android:textColor="@color/white">
		        </TextView>
	        	
				<View 
		    		android:id="@+id/chattabview"
				    android:layout_width="match_parent"
				    android:layout_height="7dp"
			    	android:visibility="invisible"
				    android:background="@color/blue" >
				</View>
				
			</LinearLayout>
			
			<View 
			    android:layout_width="0.5dp"
			    android:layout_height="22dp"
			    android:layout_gravity="center"
			    android:background="@color/white" >
			</View>
    	     
			<LinearLayout
	            android:id="@+id/resulttab"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
				android:layout_weight="1"
		        android:orientation="vertical">
	        
				
		        <TextView
		        	android:layout_width="wrap_content"
		        	android:layout_height="28dp"
					android:layout_marginTop="5dp"
			    	android:layout_gravity="center|bottom"
		        	android:text="@string/maintab_text_result"
		        	android:textColor="@color/white">
		        </TextView>
	        	
				<View 
		    		android:id="@+id/resulttabview"
				    android:layout_width="match_parent"
				    android:layout_height="7dp"
			    	android:visibility="invisible"
				    android:background="@color/blue" >
				</View>
				
			</LinearLayout>
    </LinearLayout>
    
    
    <FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent" >
			
        
	    <LinearLayout
	        android:id="@+id/drawlayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent" 
	        android:orientation="vertical">
				
		    <LinearLayout
		        android:id="@+id/drawtab_colorbar"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:background="@color/white"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
		        
		        <ImageButton
		            android:id="@+id/erase"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_erase1">
		        </ImageButton>
		        
		        <ImageButton
		            android:id="@+id/delete"
		            android:visibility="gone"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_delete">
		        </ImageButton>
		        
		        <ImageButton
		            android:id="@+id/black"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_black1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/red"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_red1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/blue"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_blue1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/green"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_green1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/purple"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_purple1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/ching"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_ching1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/yellow"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="3.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_yellow1">
		        </ImageButton>
		    	
		        <ImageButton
		            android:id="@+id/colorpick"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_color">
		        </ImageButton>
		        
		        
		        <ImageButton
		            android:id="@+id/copy"
		            android:visibility="gone"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                    android:layout_marginLeft="3.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginTop="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_copy">
		        </ImageButton>
		        
			</LinearLayout>
			
		    <FrameLayout 
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="13">
		         
			    <com.drawguess.view.DrawView
			        android:id="@+id/drawview"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent">
			    </com.drawguess.view.DrawView>
		    	
			    
			    <LinearLayout
					android:layout_marginTop="5dp"
					android:layout_width="wrap_content"
					android:layout_height="40dp">
					
			        <ImageView
			            android:id="@+id/drawtab_iv_arrow"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_vertical"
						android:layout_marginLeft="5dp"
						android:background="@drawable/bg_arrow_in"/>
			        
				    <LinearLayout
						android:id="@+id/drawtab_layout_time"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_marginLeft="5dp"
						android:background="@drawable/bg_time_normal"	
						android:gravity="center"
						android:orientation="horizontal" >
					
						<TextView 
							android:id="@+id/drawtab_tv_time"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="5dp"
							android:layout_marginRight="5dp"
							android:singleLine="true"
							android:textColor="@color/text_color"
							android:textSize="16sp" />
					</LinearLayout>
				</LinearLayout>
			
		    </FrameLayout>
		    
		    <LinearLayout
		        android:id="@+id/edit_text_layout"
		        android:layout_width="match_parent"
		        android:layout_height="52dp"
		        android:background="@drawable/bg_unlogin_bar"
		        android:orientation="horizontal">
		        
				    <EditText
				        android:id="@+id/drawtab_chat_editer"
				        android:layout_width="0dip"
				        android:layout_height="wrap_content"
				        android:layout_weight="5"
				        android:gravity="center_vertical"
                     	android:imeOptions="actionSend" 
				        android:maxHeight="45dip"
				        android:minHeight="40dip"
				        android:textColor="@color/black"
	                  	android:layout_marginLeft="10.0dp"
	                    android:layout_marginRight="10.0dp"
	                  	android:layout_marginTop="5.0dp"
	                    android:layout_marginBottom="5.0dp"
				        android:background="@drawable/edittext_sendmsg"
				        android:hint="@null"/>
				    <Button
				        android:id="@+id/drawtab_chat_send"
				        android:layout_width="0dip"
			        	android:layout_height="wrap_content"
				        android:layout_gravity="center_vertical"
				        android:minWidth="35dip"
	                  	android:layout_marginLeft="5.0dp"
	                    android:layout_marginRight="10.0dp"
	                  	android:layout_marginTop="5.0dp"
			        	android:layout_marginBottom="5dp"
			        	android:layout_weight="1"
			        	android:textSize="14sp"
			        	android:singleLine="true"
			        	android:text="@string/maintab_text_send"
			        	android:background="@drawable/btn_chat_send"
			        	android:contentDescription="@string/app_name">
		        	</Button>
		        
		    </LinearLayout>
		    
		     
		     <LinearLayout
		        android:id="@+id/drawtab_btnbar"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:background="@color/white"
		        android:layout_weight="1"
		        android:orientation="horizontal" >
		        
		        <ImageButton
		            android:id="@+id/shape"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_free">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/fill"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_fill1">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/undo"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_undo">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/menu"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_menu">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/redo"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_redo">
		        </ImageButton>
		        <ImageButton
		            android:id="@+id/edit"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_edit1">
		        </ImageButton>
		    	
		        <ImageButton
		            android:id="@+id/paint"
		        	android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
                  	android:layout_marginLeft="10.0dp"
                    android:layout_marginRight="10.0dp"
		        	android:layout_marginBottom="6dp"
		        	android:layout_weight="1"
		        	android:contentDescription="@string/app_name"
		        	android:background="@drawable/btn_paint">
		        </ImageButton>
		        
		     </LinearLayout>
	     </LinearLayout>    
		
	    
        <TextView
            android:id="@+id/debug_test"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="50dp"
        	android:layout_marginTop="50dp"
        	android:textColor="@color/red"/>
        
	    <LinearLayout
	        android:id="@+id/chatlayout" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/white"
	        android:visibility="gone"
	        android:orientation="vertical">
		    
	        <ListView
				android:id="@+id/chat_list"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:cacheColorHint="@color/transparent"
				android:divider="#00000000"
				android:dividerHeight="0dip"
				android:fadingEdge="none"
				android:listSelector="@drawable/list_selector_transition"
				android:paddingLeft="4dip"
				android:paddingRight="4dip"
				android:scrollbars="none"
				android:scrollingCache="false" >
			</ListView>
			
	        <LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/bg_unlogin_bar"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:paddingBottom="4dp"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:paddingTop="4dp" >
		
				<Button
					android:id="@+id/drawtab_char_tip"
					android:layout_width="wrap_content"
					android:layout_height="42dip"
					android:layout_marginLeft="9dip"
					android:layout_marginRight="9dip"
					android:layout_weight="1"
					android:background="@drawable/btn_bottombar"
					android:gravity="center"
					android:text="@string/btn_exit"
					android:textColor="@drawable/profile_bottom_text_color"
					style="?android:attr/borderlessButtonStyle"
					android:textSize="14sp" />
		、
			</LinearLayout>
	        
	        
	    </LinearLayout>
	    
	    
	    <LinearLayout
	        android:id="@+id/resultlayout" 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@color/white"
	        android:visibility="gone"
	        android:orientation="vertical">
		    
	        
		    <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
	        	android:layout_marginTop="20dp"	
	        	android:layout_marginBottom="20dp"	
		        android:orientation="horizontal">
		        
		        <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:textColor="@color/text_color"
		            android:textSize="20sp"
		            android:text="@string/maintab_text_player"/>
		        
		        
		        <TextView
		            android:layout_height="wrap_content"
		            android:layout_width="0dp"
		            android:layout_weight="1"
		            android:gravity="center"
		            android:textSize="20sp"
		            android:textColor="@color/text_color"
		            android:text="@string/maintab_text_result"/>
	        </LinearLayout>
		        
		    
			<View
				android:layout_width="match_parent"
				android:layout_height="1px"
				android:background="@color/devideline_listview" />
	
	        <ListView
				android:id="@+id/scores_list"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:cacheColorHint="@color/transparent"
				android:divider="#00000000"
				android:dividerHeight="0dip"
				android:fadingEdge="none"
				android:listSelector="@drawable/list_selector_transition"
				android:paddingLeft="4dip"
				android:paddingRight="4dip"
				android:scrollbars="none"
				android:scrollingCache="false" >
			</ListView>
			
	        
	    </LinearLayout>
    </FrameLayout>
</LinearLayout> 